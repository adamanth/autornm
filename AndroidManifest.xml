<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.adamanth.autornm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.adamanth.autornm.RepairListActivity"
            android:label="@string/title_repair_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventDetailActivity"
            android:label="@string/title_event_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RepairListActivity" />
        </activity>
        <provider android:name=".contentprovider.RepairContentProvider" android:authorities="ru.adamanth.autornm.contentprovider" android:exported="false"></provider>
    </application>

</manifest>